<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AndroidApp2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/tim_red</item>
        <item name="colorPrimaryVariant">@color/tim_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary / accent -->
        <item name="colorSecondary">@color/tim_gold</item>
        <item name="colorSecondaryVariant">@color/tim_brown</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/tim_cream</item>

        <!-- Optional: default text color -->
        <item name="android:textColorPrimary">@color/tim_brown</item>

        <!-- Use Material buttons default -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>
</resources>
